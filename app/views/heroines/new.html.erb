<% if flash[:messages] %>
<% flash[:messages].each do |message| %>
<div> <%= message %> </div>
<% end %>
<% end %>


<h1>New Heroine:</h1> 
<%= form_for @heroine do |f| %>
Name: <%= f.text_field :name %> <br>
Super Name: <%= f.text_field :super_name %> <br>
<%= f.collection_select :powers, @powers, :id, :name %> <br>
<%= f.submit :Submit %>
<% end %> 